{
	"compilerOptions": {
		"target": "es2020",
		"module": "commonjs",
		"outDir": "./out",
		"rootDir": "./src",
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"strict": true
	},
	"ts-node": {
		"pretty": true
	}
}
